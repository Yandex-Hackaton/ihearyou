FROM python:3.11-slim

WORKDIR /app

COPY pyproject.toml ./
COPY admin/ ./admin/
COPY bot/ ./bot/

RUN pip install --no-cache-dir -e .

RUN useradd --create-home --shell /bin/bash app && chown -R app:app /app
USER app

EXPOSE 8000

CMD ["uvicorn", "admin.admin:app", "--host", "0.0.0.0", "--port", "8000"]